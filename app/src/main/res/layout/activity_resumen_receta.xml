<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF7F0"
    android:padding="16dp"
    tools:context=".ResumenReceta">

    <!-- Bloque 1: Tostadas -->
    <Button
        android:id="@+id/btnTostadaAguacate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#558B2F"
        android:elevation="4dp"
        android:onClick="onClicked"
        android:text="Tostadas de aguacate"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/pbTostadasAguacate"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:progressBackgroundTint="#E0E0E0"
        android:progressTint="#558B2F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTostadaAguacate" />

    <!-- Bloque 2: Ensalada -->
    <Button
        android:id="@+id/btnEnsaladaCaprese"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#558B2F"
        android:elevation="4dp"
        android:onClick="onClicked"
        android:text="Ensalada caprese"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pbTostadasAguacate" />

    <ProgressBar
        android:id="@+id/pbEnsaladaCaprese"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:progressBackgroundTint="#E0E0E0"
        android:progressTint="#558B2F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEnsaladaCaprese" />

    <!-- Bloque 3: Huevos -->
    <Button
        android:id="@+id/btnHuevosRevueltosEspinacas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#558B2F"
        android:elevation="4dp"
        android:onClick="onClicked"
        android:text="Huevos revueltos con espinacas"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pbEnsaladaCaprese" />

    <ProgressBar
        android:id="@+id/pbHuevosRevueltosEspinacas"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:progressBackgroundTint="#E0E0E0"
        android:progressTint="#558B2F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnHuevosRevueltosEspinacas" />

    <!-- Bloque 4: Sándwich -->
    <Button
        android:id="@+id/btnSanwitchEspinacasHuevo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#558B2F"
        android:elevation="4dp"
        android:onClick="onClicked"
        android:text="Sándwich caliente de espinacas y huevo"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pbHuevosRevueltosEspinacas" />

    <ProgressBar
        android:id="@+id/pbSandwichEspinacasHuevo"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:progressBackgroundTint="#E0E0E0"
        android:progressTint="#558B2F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSanwitchEspinacasHuevo" />

</androidx.constraintlayout.widget.ConstraintLayout>
